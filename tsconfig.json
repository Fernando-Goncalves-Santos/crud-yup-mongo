{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "ignoreDeprecations": "6.0",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true // <-- nÃ£o gera arquivos .js
  },
  "include": ["src/**/*"]
}
